{
  "name": "spellbound",
  "displayName": "spellbound",
  "description": "Use OpenAI models to weave the magic of AI into your coding experience, generating enchanting solutions and sparking intuitive insights.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spellbound",
      "properties": {
        "spellbound.openai_api_key": {
          "type": "string",
          "default": "",
          "description": "Enter your OpenAI API key here, used for inference.",
          "scope": "machine"
        },
        "spellbound.pinecone_api_key": {
          "type": "string",
          "default": "",
          "description": "Enter your Pinecone API key here, used for search.",
          "scope": "machine"
        },
        "spellbound.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "Select the AI model used by the Spellbound extension."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spellbound",
          "title": "Spellbound",
          "icon": "assets/wand-magic-sparkles-solid.svg"
        }
      ]
    },
    "views": {
      "spellbound": [
        {
          "id": "spellbound.chat",
          "name": "Chatbox"
        }
      ]
    },
    "commands": [
      {
        "command": "spellbound.executeInstruction",
        "title": "Execute Instruction with Spellbound"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "ejs": "^3.1.9"
  }
}
