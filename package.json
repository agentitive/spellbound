{
  "name": "spellbound",
  "displayName": "spellbound",
  "description": "Use OpenAI models to weave the magic of AI into your coding experience, generating enchanting solutions and sparking intuitive insights.",
  "license": "MIT",
  "publisher": "mpoteat-vsce",
  "icon": "./assets/icon.png",
  "galleryBanner.color": "#0e1116",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/poteat/spellbound.git"
  },
  "contributes": {
    "configuration": {
      "title": "Spellbound",
      "properties": {
        "spellbound.openai_api_key": {
          "type": "string",
          "default": "",
          "description": "Enter your OpenAI API key here, used for inference.",
          "scope": "machine"
        },
        "spellbound.pinecone_api_key": {
          "type": "string",
          "default": "",
          "description": "Enter your Pinecone API key here, used for search.",
          "scope": "machine"
        },
        "spellbound.pinecone_index": {
          "type": "string",
          "default": "",
          "description": "Enter your Pinecone index name here, used for search.",
          "scope": "application"
        },
        "spellbound.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "Select the AI model used by the Spellbound extension."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spellbound",
          "type": "webview",
          "title": "Spellbound",
          "icon": "assets/wand-magic-sparkles-solid.svg"
        }
      ]
    },
    "views": {
      "spellbound": [
        {
          "id": "spellbound.chat",
          "type": "webview",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "spellbound.executeInstruction",
        "title": "Execute Instruction with Spellbound"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^0.0.12",
    "ejs": "^3.1.9",
    "ignore": "^5.2.4",
    "markdown-it": "^13.0.1",
    "node-fetch": "^3.3.1",
    "yaml": "^2.2.1"
  }
}
