{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"../../../../node_modules/@types",
		],
		"pretty": true,
		"stripInternal": true,
		"preserveSymlinks": true,
		"outDir": "../../../../dist",
		"sourceRoot": "../../../../src",
		"incremental": true,
		"resolveJsonModule": true,
		"types": [
			"node"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
        "lib": ["ES2021.WeakRef"]
	},
	"include": [
		"../../../../src",
	],
	"exclude": [
		"../../../../node_modules"
	]
}