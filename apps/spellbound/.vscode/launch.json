    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            // run rushx build in apps/examples/flow-editor first
            // "preLaunchTask": "rush build"
        }
    ]
}